
<%= form_for @recipe do |r| %>
    <%= r.label :title %>
    <%= r.text_field :title %>

    <%= r.fields_for :ingredients do |ingr| %>
        <%= ingr.label :name %>
        <%= ingr.text_field :name %>

        <%= ingr.label :quantity %>
        <%= ingr.text_field :quantity %>

        <% end %>
    <%= r.submit %>

<% end %>
